{
    "compilerOptions": {
        "composite": true,
        "disableSourceOfProjectReferenceRedirect": true,
        "incremental": true,
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ES6"
        ],
        /*"paths": {
            "@glenna/api": [ "./packages/api/src" ],
            "@glenna/app": [ "./packages/app/src" ],
            "@glenna/bot": [ "./packages/bot/src" ],
            "@glenna/common": [ "./packages/common/src" ],
            "@glenna/util": [ "./packages/util/src" ]
        }*/
    },
    "exclude": [
        "node_modules",
        "**/*/dist"
    ],
    "references": [
        { "path": "./packages/api/tsconfig.build.json" },
        { "path": "./packages/app/tsconfig.build.json" },
        { "path": "./packages/bot/tsconfig.build.json" },
        { "path": "./packages/common/tsconfig.build.json" },
        { "path": "./packages/util/tsconfig.build.json" }
    ]
}
